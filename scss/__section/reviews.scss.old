.section__reviews {
	width: 100%;
	height: 100%;
	display: flex;
	flex-flow: row wrap;
	align-items: center;
}


.reviews__item {
	width: 25%;
	height: 50%;	
	display: inline-block;
	filter:saturate(0);
		&:hover {
		opacity: (.8);
	}
}

.reviews__item__img {
	display: inline-block;
	width: 275px;
	height: 325px;
}


.reviews__drop {
	width: 25%;
	height: 50%;
	position: absolute;
	width: 157px;
	height: 70px;
	text-align: center;
	margin: 20px;
	top: 100%;
	z-index: 10;
	left: 0;
}

.reviews__item__title {
	padding-top: 50px;
	padding-left: 20px;
	padding-right: 20px;
	font-family: "Gagalin";
	font-weight: 500;
	font-size: 14px;
	color: #fff;
	margin-bottom: 30px;
}

.reviews__item__text {
	padding-left: 20px;
	padding-right: 20px;
	font-family: "Ubuntu";
	font-weight: 300;
	font-size: 14px;
	color: #fff;
	margin-bottom: 20px;
}

.reviews__item__link {
	margin-left: 20px;
	display: inline-block;
	border-radius: 5px;
	line-height: 35px;
	text-align: center;
	height: 35px;
	width: 110px;
	background: #2f3234;
	color: #fff;
	font-family: "Ubuntu";
	font-weight: 500;
	font-size: 13px;
	text-transform: uppercase;
	text-decoration: none;

}